<UserControl x:Class="WpfApp1.view.InOutLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             FontFamily="Montserrat"
             FontSize="14">

    <UserControl.Resources>
        <Style x:Key="HeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Foreground" Value="#223843"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0 0 0 1"/>
            <Setter Property="Padding" Value="14 8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="12 8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="#9d223843"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="#E1E5EE"/>
            <Setter Property="BorderBrush" Value="#B23B525E"/>
            <Setter Property="BorderThickness" Value="0 0 0 1"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#264653"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2A9D8F"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Border BorderThickness="1"
                BorderBrush="#223843"
                CornerRadius="10"
                Background="Transparent"
                Padding="1"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="2" Opacity="0.4"/>
            </Border.Effect>

            <ListView ItemsSource="{Binding InOutItems}"
                      BorderThickness="0"
                      Background="Transparent"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      AlternationCount="2"
                      SelectionChanged="ListView_SelectionChanged">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="🛠 İŞLEM TÜRÜ"
                                        DisplayMemberBinding="{Binding OperationType}"
                                        Width="240"
                                        HeaderContainerStyle="{StaticResource HeaderStyle}"/>
                        <GridViewColumn Header="📄 AÇIKLAMA"
                                        DisplayMemberBinding="{Binding ActionDescription}"
                                        Width="380"
                                        HeaderContainerStyle="{StaticResource HeaderStyle}"/>
                        <GridViewColumn Header="⏰ TARİH"
                                        DisplayMemberBinding="{Binding Time, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}"
                                        Width="220"
                                        HeaderContainerStyle="{StaticResource HeaderStyle}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</UserControl>