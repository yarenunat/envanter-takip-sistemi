<UserControl x:Class="WpfApp1.view.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             FontFamily="Montserrat">

    <UserControl.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#40008080"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#67008080"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#55008080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="208"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="ANASAYFA" Foreground="#FFFFFF" FontSize="28" FontWeight="Bold"
                       Margin="10,-28,0,16" Grid.ColumnSpan="2"/>

            <UniformGrid Columns="4" Margin="0,22,0,24" Grid.ColumnSpan="2" Grid.RowSpan="2">
                <Border CornerRadius="14" Padding="20" Margin="8" Background="#40008080">
                    <Border.Effect>
                        <DropShadowEffect Color="#3F000000" BlurRadius="18" ShadowDepth="2" Opacity="0.25"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Toplam Ürün" Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalProductCount}" Foreground="#FFFFFF" FontSize="32" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock Text="+3% bu hafta" Foreground="#10B981" FontSize="12" FontWeight="Medium"
                                   Margin="0,42,0,0" VerticalAlignment="Top" Grid.Row="1"/>
                    </Grid>
                </Border>

                <Border CornerRadius="14" Padding="20" Margin="8" Background="#40008080">
                    <Border.Effect>
                        <DropShadowEffect Color="#3F000000" BlurRadius="18" ShadowDepth="2" Opacity="0.25"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Aktif Personel" Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding EmployeeCount}" Foreground="#FFFFFF" FontSize="32" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock Text="+1 bugün" Foreground="#60A5FA" FontSize="12" FontWeight="Medium"
                                   Margin="0,42,0,0" VerticalAlignment="Top" Grid.Row="1"/>
                    </Grid>
                </Border>

                <Border CornerRadius="14" Padding="20" Margin="8" Background="#40008080">
                    <Border.Effect>
                        <DropShadowEffect Color="#3F000000" BlurRadius="18" ShadowDepth="2" Opacity="0.25"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Bekleyen Ürünler" Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding PendingCount}" Foreground="#FFFFFF" FontSize="32" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock Text="depoda bekliyor" Foreground="#F59E0B" FontSize="12" FontWeight="Medium"
                                   Margin="0,42,0,0" VerticalAlignment="Top" Grid.Row="1"/>
                    </Grid>
                </Border>

                <Border CornerRadius="14" Padding="20" Margin="8" Background="#67008080">
                    <Border.Effect>
                        <DropShadowEffect Color="#3F000000" BlurRadius="18" ShadowDepth="2" Opacity="0.25"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Arızalı Ürünler" Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding DefectiveCount}" Foreground="#FFFFFF" FontSize="32" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock Text="onarım bekliyor" Foreground="#EF4444" FontSize="12" FontWeight="Medium"
                                   Margin="0,42,0,0" VerticalAlignment="Top" Grid.Row="1"/>
                    </Grid>
                </Border>
            </UniformGrid>

            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="14" Padding="20" Margin="8,0,8,0" Grid.Column="0" Background="#37008080">
                    <Border.Effect>
                        <DropShadowEffect Color="#3F000000" BlurRadius="18" ShadowDepth="2" Opacity="0.25"/>
                    </Border.Effect>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Hoş Geldiniz!"
                                       Foreground="#FFFFFF"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="Bu envanter yönetim sistemi, Feka Automotive bünyesindeki tüm demirbaşların takibini ve zimmetlenmesini kolaylaştırmak için tasarlanmıştır. Sistem sayesinde bilgisayar, tablet, araç parçaları ve diğer ekipmanlar anlık olarak takip edilebilir, stok durumu görüntülenebilir ve personel bazlı zimmetlendirme yapılabilir. Sol menüden ilgili işlemleri seçerek ürün ekleme, güncelleme veya çıkış işlemlerini hızlıca gerçekleştirebilirsiniz. Ayrıca son işlemler paneli ile en son yapılan hareketleri kolayca görebilir, stok ve zimmet raporlarını anında inceleyebilirsiniz."
                                       Foreground="#FFFFFF"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       LineHeight="20"
                                       TextAlignment="Justify"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Border CornerRadius="14" Padding="20" Margin="8,0,8,0" Grid.Column="1" Background="#37008080">
                    <Border.Effect>
                        <DropShadowEffect Color="#3F000000" BlurRadius="18" ShadowDepth="2" Opacity="0.25"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Hızlı Erişim"
                                   Foreground="#FFFFFF"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="Karekod tarama, ürün listesine erişim ve ürün yönetimi bölümlerine ilgili butona tıklayarak ulaşabilirsiniz."
                                   TextAlignment="Justify"
                                   Foreground="#FFFFFF"
                                   FontSize="13"
                                   FontWeight="Regular"
                                   TextWrapping="Wrap"
                                   LineHeight="18"
                                   Margin="0,0,0,25"/>

                        <UniformGrid Columns="3">
                            <Button Command="{Binding OpenScanViewCommand}"
                                    Style="{StaticResource ActionButton}" Height="79" Width="79">
                                <StackPanel>
                                    <Path Data="M15.5,14H14.71L14.43,13.73C15.41,12.59 16,11.11 16,9.5C16,5.96 13.04,3 9.5,3C5.96,3 3,5.96 3,9.5C3,13.04 5.96,16 9.5,16C11.11,16 12.59,15.41 13.73,14.43L14,14.71V15.5L19,20.5L20.5,19L15.5,14M9.5,14C7.01,14 5,11.99 5,9.5C5,7.01 7.01,5 9.5,5C11.99,5 14,7.01 14,9.5C14,11.99 11.99,14 9.5,14Z"
                                          Fill="#FFFFFF" Width="24" Height="24" Stretch="Uniform"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding OpenProductsViewCommand}"
        Style="{StaticResource ActionButton}" Height="79" Width="79">
                                <StackPanel>
                                    <Path Data="M12,15A3,3 0 0,1 15,18A3,3 0 0,1 12,21A3,3 0 0,1 9,18A3,3 0 0,1 12,15M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9M12,3A3,3 0 0,1 15,6A3,3 0 0,1 12,9A3,3 0 0,1 9,6A3,3 0 0,1 12,3Z"
              Fill="#FFFFFF" Width="24" Height="24" Stretch="Uniform"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding OpenManageViewCommand}"
                                    Style="{StaticResource ActionButton}" Height="79" Width="79">
                                <StackPanel>
                                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                          Fill="#FFFFFF" Width="24" Height="24" Stretch="Uniform"/>
                                </StackPanel>
                            </Button>


                        </UniformGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>