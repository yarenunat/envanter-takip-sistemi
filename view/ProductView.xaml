<UserControl x:Class="WpfApp1.view.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WpfApp1.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Montserrat"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="Auto">

    <UserControl.Resources>
        <local:ZimmetConverter x:Key="ZimmetConverter"/>

        <!-- Renk paleti -->
        <SolidColorBrush x:Key="BgDark" Color="#0F2A35"/>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#123848" Offset="0"/>
            <GradientStop Color="#0E2D3A" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SurfaceGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1B3846" Offset="0"/>
            <GradientStop Color="#162F3A" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#214757" Offset="0"/>
            <GradientStop Color="#1B3D4B" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="BorderSoft" Color="#2E5A68"/>
        <SolidColorBrush x:Key="BorderHover" Color="#3F7E8F"/>

        <SolidColorBrush x:Key="TextPrimary" Color="#EAF2F8"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#C7D7E2"/>
        <SolidColorBrush x:Key="Accent" Color="#4ED6C5"/>
        <SolidColorBrush x:Key="AccentDeep" Color="#2FB7A7"/>

        <!-- TextBox stili -->
        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Background" Value="#183D4F"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="TbBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TbBorder" Property="BorderBrush" Value="{StaticResource BorderHover}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="TbBorder" Property="BorderBrush" Value="{StaticResource Accent}"/>
                                <Setter TargetName="TbBorder" Property="Background" Value="#1C4659"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buton stili -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#276B77"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Btn"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Btn" Property="Background" Value="#338B98"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Btn" Property="Background" Value="#1E5A65"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="2" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Kart metin stilleri -->
        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>

        <Style x:Key="CardSub" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Arka plan -->

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık paneli -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderGradient}"
                    CornerRadius="16"
                    Padding="18"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Margin="0,0,0,16">
                <TextBlock Text="Ürün Yönetimi"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}"/>
            </Border>

            <!-- Arama ve Buton -->
            <Border Grid.Row="1"
                    Background="{StaticResource SurfaceGradient}"
                    CornerRadius="14"
                    Padding="12"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="280"
                             x:Name="BarcodeSearchBox"
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="BarcodeSearchBox_TextChanged"
                             Text=""
                             ToolTip="Barkod veya ürün adı ile ara"/>
                    <Button Content="Tümünü Göster"
                            Width="170"
                            Margin="12,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="ShowAllButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Ürün listesi -->
            <Border Grid.Row="2"
                    Background="{StaticResource SurfaceGradient}"
                    Padding="18"
                    CornerRadius="16"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True"
                              SnapsToDevicePixels="True">
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True"
                                           ItemWidth="360"
                                           Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource CardGradient}"
                                        CornerRadius="14"
                                        BorderBrush="{StaticResource BorderSoft}"
                                        BorderThickness="1"
                                        Padding="16"
                                        Margin="0,0,14,14"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <ScaleTransform x:Name="cardScale" ScaleX="1" ScaleY="1"/>
                                    </Border.RenderTransform>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.35"/>
                                    </Border.Effect>

                                    <StackPanel>
                                        <!-- Ürün adı -->
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource CardTitle}"/>

                                        <!-- Kategori adı -->
                                        <TextBlock Text="{Binding CategoryName}"
                                                   Style="{StaticResource CardSub}"
                                                   FontWeight="SemiBold"
                                                   Margin="0,2,0,8"/>

                                        <!-- Açıklama (boşsa görünmez) -->
                                        <TextBlock Text="{Binding Description}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,10">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CardSub}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Description}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Detaylar -->
                                        <WrapPanel VerticalAlignment="Center">
                                            <TextBlock Text="Barkod:" FontWeight="SemiBold" Foreground="{StaticResource Accent}"/>
                                            <TextBlock Text="{Binding Barcode}" Foreground="{StaticResource TextPrimary}" Margin="6,0,0,0"/>

                                       
                                            <TextBlock Text=" | " Foreground="{StaticResource Accent}" Margin="10,0"/>
                                            <TextBlock FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource ZimmetConverter}">
                                                        <Binding Path="AssignedTo"/>
                                                        <Binding Path="AssignedDepartment"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </WrapPanel>
                                    </StackPanel>

                                    <!-- Hover animasyonu -->
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="cardScale"
                                                                     Storyboard.TargetProperty="ScaleX"
                                                                     To="1.02" Duration="0:0:0.12"/>
                                                    <DoubleAnimation Storyboard.TargetName="cardScale"
                                                                     Storyboard.TargetProperty="ScaleY"
                                                                     To="1.02" Duration="0:0:0.12"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="cardScale"
                                                                     Storyboard.TargetProperty="ScaleX"
                                                                     To="1.0" Duration="0:0:0.12"/>
                                                    <DoubleAnimation Storyboard.TargetName="cardScale"
                                                                     Storyboard.TargetProperty="ScaleY"
                                                                     To="1.0" Duration="0:0:0.12"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>