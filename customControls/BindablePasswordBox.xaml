<UserControl x:Class="WpfApp1.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <UserControl.Resources>
        <FontFamily x:Key="MontserratFont">Montserrat</FontFamily>
    </UserControl.Resources>
    <PasswordBox x:Name="txtPassword"
            FontSize="13"
            FontWeight="Medium"
            Foreground="White"
            CaretBrush="LightGray"
            BorderBrush="DarkGray"
            BorderThickness="0,0,0,1"
            VerticalContentAlignment="Center"
            Padding="40,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/WpfApp1;component/images/padlock (2).png" 
                   Stretch="None" 
                   AlignmentX="Left">
            </ImageBrush>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
