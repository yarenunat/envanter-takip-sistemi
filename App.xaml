<Application x:Class="WpfApp1.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:WpfApp1" xmlns:view="clr-namespace:WpfApp1.view" xmlns:vm="clr-namespace:WpfApp1.viewModel" Startup="ApplicationStart">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/UIColors.xaml"/>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ControlTemplate x:Key="StyledScrollBar" TargetType="ScrollBar">
                <Grid Background="Transparent">
                    <Track Name="PART_Track">
                        <Track.DecreaseRepeatButton>
                            <RepeatButton Command="ScrollBar.LineUpCommand" Style="{x:Null}" Height="0"/>
                        </Track.DecreaseRepeatButton>
                        <Track.Thumb>
                            <Thumb>
                                <Thumb.Template>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border Background="#3A465C" CornerRadius="4" Width="8" Margin="0" VerticalAlignment="Stretch"/>
                                    </ControlTemplate>
                                </Thumb.Template>
                            </Thumb>
                        </Track.Thumb>
                        <Track.IncreaseRepeatButton>
                            <RepeatButton Command="ScrollBar.LineDownCommand" Style="{x:Null}" Height="0"/>
                        </Track.IncreaseRepeatButton>
                    </Track>
                </Grid>
            </ControlTemplate>
            <Style x:Key="flatButton" TargetType="Button">
                <Setter Property="Background" Value="#FFEDF2FA"/>
                <Setter Property="Foreground" Value="#333"/>
                <Setter Property="Padding" Value="6,2"/>
                <Setter Property="Margin" Value="6,8,6,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontFamily" Value="Montserrat"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="StyledScrollViewer" TargetType="ScrollViewer">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- İçerik -->
                                <ScrollContentPresenter Grid.Column="0"/>
                                <!-- Scroll Çubuğu -->
                                <ScrollBar Grid.Column="1" Orientation="Vertical" Width="8" Background="Transparent" Foreground="#A0B1C5" Cursor="Hand" Template="{StaticResource StyledScrollBar}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Mevcut DataTemplate'ler -->
            <DataTemplate DataType="{x:Type view:HomeView}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type view:EmployeeView}">
                <view:EmployeeView/>
            </DataTemplate>
           
            <DataTemplate DataType="{x:Type view:ProductView}">
                <view:ProductView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type view:ScanView}">
                <view:ScanView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:InOutLogViewModel}">
                <view:InOutLogView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ManageViewModel}">
                <view:ManageView/>
            </DataTemplate>
            
           

        </ResourceDictionary>
    </Application.Resources>

</Application>
